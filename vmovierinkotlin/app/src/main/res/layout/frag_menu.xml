<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/side_set" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:background="@drawable/default_avatar" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/side_message" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_top"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_subscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="36dp"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/side_subscribe"
            android:text="我的订阅"
            android:textColor="@color/light_gray" />

        <TextView
            android:id="@+id/tv_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/side_subscribe"
            android:text="离线缓存"
            android:textColor="@color/light_gray" />

        <TextView
            android:id="@+id/tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/side_subscribe"
            android:text="我喜欢的"
            android:textColor="@color/light_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/layout_middle"
        android:layout_marginTop="24dp"
        android:background="@color/colorAccent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/side_home_"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingLeft="24dp"
            android:text="首页"
            android:textColor="@color/light_gray" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_series"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/ll_main"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="10dp"
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/side_series_"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingLeft="24dp"
            android:text="幕后"
            android:textColor="@color/light_gray" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_behind"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/ll_series"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:background="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/side_behind_"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingLeft="24dp"
            android:text="幕后"
            android:textColor="@color/light_gray" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:background="#10000000">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="48dp"
            android:layout_marginRight="48dp"
            android:scaleType="fitXY"
            android:src="@drawable/side_close" />
    </RelativeLayout>
</RelativeLayout>